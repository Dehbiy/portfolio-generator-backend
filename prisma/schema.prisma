generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  name        String  @id
  email       String? @unique
  description String?
}

model Sections {
  title       String        @id
  subSections SubSections[] @relation("SectionSubSections")
}

model SubSections {
  id          String    @id @default(cuid()) @map("_id")
  title       String
  description String?   
  link        String?   
  start_date  DateTime?
  end_date    DateTime?
  sectionsId  String

  sections    Sections  @relation("SectionSubSections", fields: [sectionsId], references: [title], onDelete: Cascade)
}
