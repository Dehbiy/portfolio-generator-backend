generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(cuid()) @map("_id")
  name        String
  email       String?
  description String?
}

model Sections {
  id          String        @id @default(cuid()) @map("_id")
  title       String
  subSections SubSections[]
}

model SubSections {
  id          String    @id @default(cuid()) @map("_id")
  title       String
  description String?
  link        String?
  start_date  DateTime?
  end_date    DateTime?
  sectionsId  String
  sections    Sections  @relation(fields: [sectionsId], references: [id])
}
